<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Clone</title>
  <link rel="stylesheet" href="styles.css" />
  <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap" rel="stylesheet">
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
  <script>
    const ROOM_ID = "<%= roomId %>";
  </script>
</head>

<body>
  <div class="header">
    <div class="logo">
      <h2>Team's Meet</h2>
    </div>
  </div>
  <div class="main">
    <div class="main__left">
      <div class="videos__group">
        <div id="video-grid">

        </div>
      </div>
    </div>

    <div class="main__right">
      <div class="main__chat_window">
        <div class="messages">
          <ul class="messages"></ul>
        </div>
      </div>
      <div class="main__message_container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
        <div id="send" class="options__button plus">
          <i class="fa fa-plus" aria-hidden="true"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="optiondiv">
    <div class="options">
      <!-- <div class="options__left"> -->
      <div id="muteButton" class="options__button">
        <i class="fa fa-microphone" aria-hidden="true"></i>
      </div>
      <div id="stopVideo" class="options__button">
        <i class="fa fa-video-camera" aria-hidden="true"></i>
      </div>
      <!-- </div> -->
      <!-- <div class="options__right"> -->
      <div id="stopButton" class="options_button">
        <img src="/images/end-call-icon.png" class=" end_call" />
      </div>
      <div id="inviteButton" class="options__button">
        <i class="fas fa-user-plus" aria-hidden="true"></i>
      </div>
      <div id="showChat" class="options__button">
        <i class="fa fa-comment"></i>
      </div>
    </div>
    <!-- <div id="record" class="options_button">
        <i class="fad fa-record-vinyl"></i>
      </div> -->
    <!-- </div> -->
  </div>
  </div>
</body>
<script src="script.js"></script>

</html>
